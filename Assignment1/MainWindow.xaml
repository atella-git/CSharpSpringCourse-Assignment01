<Window x:Class="Assignment1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment1"
        mc:Ignorable="d"
        Title="Hello World" Height="150" Width="150">

    <StackPanel>
        <TextBlock Foreground="Blue">Enter Name: </TextBlock>
        <TextBox x:Name="uxName" TextChanged="Text_Changed"></TextBox>
        <TextBlock Foreground="Blue">Enter Password:</TextBlock>
        <TextBox x:Name="uxPassword" TextChanged="Text_Changed"> </TextBox>
        <Button x:Name="uxSubmit" Click="uxSubmit_Click" IsEnabled="False" Foreground="Red">Submit</Button>
    </StackPanel>
</Window>